
<div>
  <ul class="projects">
    <% @projects.each do |project| %>
        <li>
          <div class="thumbnail">
            <img data-src="holder.js/300x200" class="span4" alt="" src="<%= project.thumbnail.present? ? project.thumbnail.url : '' %>">

            <div class="caption">
              <h3><%= project.name.html_safe %></h3>
              <p><%= project.description.html_safe %></p>
              <p class="pull-right">
                <a href="#" class="btn btn-primary">More Details</a>
                <!--<a href="#" class="btn">Action</a>-->
              </p>
            </div>
          </div>
        </li>
    <% end %>
  </ul>

  <div class="pagination pagination-large">
    <ul>
      <li class="<%= @current_page == 1 ? 'disabled' : '' %>">
        <a href="#">Prev</a>
      </li>
      <% (1..@total_pages).each do |page_number| %>
          <li class="<%= page_number == @current_page? 'disabled' : '' %>">
            <a href="#" ><%= page_number%></a>
          </li>
      <% end %>
      <li class="<%= @total_pages == @current_page? 'disabled' : '' %>">
        <a href="#">Next</a>
      </li>
    </ul>
  </div>
</div>
