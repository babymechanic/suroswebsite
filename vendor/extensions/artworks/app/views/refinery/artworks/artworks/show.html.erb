<% content_for :body_content_title do %>
  <%= @artwork.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @artwork.name %>
    </p>
  </section>
  <section>
    <h1>Thumbnail</h1>
    <p>
      <%= image_fu @artwork.thumbnail, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @artwork.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="artworks">
      <% @artworks.each do |artwork| %>
        <li>
          <%= link_to artwork.name, refinery.artworks_artwork_path(artwork) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
