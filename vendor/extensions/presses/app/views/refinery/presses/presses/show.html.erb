<% content_for :body_content_title do %>
  <%= @press.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @press.name %>
    </p>
  </section>
  <section>
    <h1>Thumbnail</h1>
    <p>
      <%= image_fu @press.thumbnail, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="presses">
      <% @presses.each do |press| %>
        <li>
          <%= link_to press.name, refinery.presses_press_path(press) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
