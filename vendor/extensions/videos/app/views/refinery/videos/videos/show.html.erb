<% content_for :body_content_title do %>
  <%= @video.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @video.name %>
    </p>
  </section>
  <section>
    <h1>Thumbnail</h1>
    <p>
      <%= image_fu @video.thumbnail, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @video.description %>
    </p>
  </section>
  <section>
    <h1>Yourtube</h1>
    <p>
      <%=raw @video.yourtube_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="videos">
      <% @videos.each do |video| %>
        <li>
          <%= link_to video.name, refinery.videos_video_path(video) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
