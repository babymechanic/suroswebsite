<% content_for :body_content_title do %>
  <%= @exhibition.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @exhibition.name %>
    </p>
  </section>
  <section>
    <h1>Thumbnail</h1>
    <p>
      <%= image_fu @exhibition.thumbnail, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @exhibition.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="exhibitions">
      <% @exhibitions.each do |exhibition| %>
        <li>
          <%= link_to exhibition.name, refinery.exhibitions_exhibition_path(exhibition) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
